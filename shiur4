import java.util.Scanner;
public class Main
{
        String string1=scan.next();
		char str21 = string1.charAt(0);
		char str41 = string1.charAt(1);
		char str31 = string1.charAt(2);
		System.out.println(str31+""+str41+""+str21);

}
		
